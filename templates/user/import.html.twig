{% extends 'base.html.twig' %}

{% block title %}Benutzer importieren{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Benutzer aus CSV-Datei importieren</h1>

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">CSV-Format</h5>
                <p>Die CSV-Datei sollte folgendes Format haben:</p>
                <pre>benutzername,email
user1,user1@example.com
user2,user2@example.com</pre>
                <p class="text-muted small">Die Spalten müssen genau die Namen "benutzername" und "email" haben.</p>
            </div>
        </div>

        {{ form_start(form, {'attr': {'class': 'mb-4'}}) }}
            <div class="mb-3">
                {{ form_label(form.csvFile) }}
                {{ form_widget(form.csvFile) }}
                <div class="form-text">{{ form_help(form.csvFile) }}</div>
                <div class="invalid-feedback">{{ form_errors(form.csvFile) }}</div>
            </div>

            <div class="form-check mb-3">
                {{ form_widget(form.clearExisting) }}
                {{ form_label(form.clearExisting) }}
                <div class="form-text">Wenn aktiviert, werden alle existierenden Benutzer vor dem Import gelöscht!</div>
            </div>

            <div class="d-flex justify-content-between">
                <a href="{{ path('user_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Zurück zur Übersicht
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-file-import"></i> Importieren
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
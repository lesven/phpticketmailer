{
    "name": "arzhaan/phpticketmailer",
    "description": "Ein Tool zum Versenden von Ticket-Umfragen per E-Mail",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/annotations": "^2.0",
        "doctrine/doctrine-bundle": "^2.9",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.14",
        "symfony/console": "^6.4",
        "symfony/dotenv": "^6.4",
        "symfony/flex": "^2",
        "symfony/form": "^6.4",
        "symfony/framework-bundle": "^6.4",
        "symfony/mailer": "^6.4",
        "symfony/runtime": "^6.4",
        "symfony/security-csrf": "6.4.*",
        "symfony/twig-bundle": "^6.4",
        "symfony/validator": "^6.4",
        "symfony/yaml": "^6.4",
        "twig/extra-bundle": "^3.5",
        "twig/twig": "^3.5"
    },
    "require-dev": {
        "symfony/debug-bundle": "^6.4",
        "symfony/maker-bundle": "^1.48",
        "symfony/stopwatch": "^6.4",
        "symfony/web-profiler-bundle": "^6.4",
        "symfony/browser-kit": "^6.4",
        "symfony/css-selector": "^6.4",
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.11",
        "vimeo/psalm": "^5.26"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit -c phpunit.xml.dist --coverage-html build/coverage-html || true && cp -f coverage.xml build/logs/clover.xml || true"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.4.*"
        }
    }
}
